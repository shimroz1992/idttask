<div class="container">
  <div class="row">
    <div class="col-6 mx-auto text-center">
      <h2>Sign up</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col">
      <div class="field form-group p-3 mt-0 col-6 mx-auto">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"name@example.com" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="field form-group p-3 mt-0  col-6 mx-auto">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class:"form-control",placeholder:"password (6 characters minimum)" %>
      </div>
    </div>
  </div>

  <div>
    <div>
      <div class="field form-group p-3 mt-0 col-6 mx-auto">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control",placeholder:"re-enter password" %>
      </div>
    </div>
  </div>

  <div>
    <div>
      <div class="actions form-group  mt-3 d-grid  col-6 mx-auto">
        <%= f.submit "Sign up",class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>

  <%#= render "devise/shared/links" %>

</div>